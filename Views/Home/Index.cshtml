@using Task_5.Models.RequestsData;
@model PairData;
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutHome";
}

<div class="main-panel">
    <form asp-controller="home" asp-action="index" method="post">
        <div class="control-panel">
            <div class="controller-item">
                <label>Regions : </label>
                <select name="Region">
                    @{
                        foreach (var item in Model.Regions)
                        {
                            if (item.Key == Model.PostData.Region)
                            {
                                <option selected value="@item.Key">@item.Key</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Key</option>
                            }
                        }
                    }
                </select>
                <label>Errors : </label>
                <input id="error-range" type="range" step="0.25" class="input-range" min="0" max="10">
                <input id="error-field" type="number" step="0.25" name="ErrorsValue" value="@Model.PostData.ErrorsValue" min="0.0" max="1000.0">
            </div>
            <div class="controller-item">
                <label>Errors seed : </label>
                <input type="number" value="@Model.PostData.ErrorsSeed" name="ErrorsSeed" value="0" min="0" max="2147483647">

            </div>
            <div class="controller-item">
                <label>Generation seed : </label>
                <input type="number" value="@Model.PostData.GenerationSeed" name="GenerationSeed" value="0" min="0" max="2147483647">
            </div>
            <div class="controller-item">
                <button type="submit" class="button">Submit</button>
            </div>
            <div class="controller-item">
                <button type="submit" name="IsRandom" value="true" class="button">Random</button>
            </div>
        </div>

        <div class="data-table">
            <table>
                <tr class="tr-head">
                    <td>
                        Index
                    </td>
                    <td>
                        Name
                    </td>
                    <td>
                        Lastname
                    </td>
                    <td>
                        Adress
                    </td>
                    <td>
                        Phone
                    </td>
                    <td>
                        Zipcode
                    </td>
                </tr>
                @{
                    for (int i = 0; i < Model.Persons.Count; i++)
                    {
                        string className = "tr-light";

                        if (i % 2 == 0)
                        {
                            className = "tr-dark";
                        }

                        <tr class="@className">
                            <td>
                                @Model.Persons[i].IndexNumber
                            </td>
                            <td>
                                @Model.Persons[i].FirstName
                            </td>
                            <td>
                                @Model.Persons[i].LastName
                            </td>
                            <td>
                                @Model.Persons[i].Adress
                            </td>
                            <td>
                                @Model.Persons[i].PhoneNumber
                            </td>
                            <td>
                                @Model.Persons[i].ZipCode
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
        <div class="controller-item">
            <button type="submit" name="More" value="@Model.PostData.More" class="button-footer">More</button>
        </div>
        <div class="controller-item">
            <button type="submit" name="IsRandom" value="" class="button">Export to CSV</button>
        </div>
    </form>
</div>
